{
    "version": 2,
    "builds": [
        {
            "src": "backend/backend/wsgi.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.9"
            }
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "staticfiles"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/api/(.*)",
            "dest": "backend/backend/wsgi.py"
        },
        {
            "src": "/(.*)",
            "dest": "backend/backend/wsgi.py"
        }
    ]
}
